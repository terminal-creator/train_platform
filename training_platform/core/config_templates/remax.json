{
  "name": "REMAX - Reinforcement Maximization",
  "description": "强化最大化训练配置模板。通过最大化reward的方式训练，简化了PPO的优化过程。",
  "category": "reinforcement_learning",
  "algorithm": "remax",
  "verl_module": "verl.trainer.main_ppo",
  "verl_adv_estimator": "remax",
  "required_fields": ["model_path", "train_data_path"],
  "data_format": {
    "type": "prompt-only",
    "required_columns": ["prompt"],
    "optional_columns": ["data_source"],
    "description": "每条数据包含prompt字段"
  },
  "defaults": {
    "num_epochs": 3,
    "learning_rate": 1e-6,
    "batch_size": 256,
    "micro_batch_size": 4,
    "max_prompt_length": 512,
    "max_response_length": 1024,
    "rollout_n": 1,
    "kl_coef": 0.001,
    "use_kl_loss": true,
    "lora_enabled": false
  },
  "parameter_ranges": {
    "learning_rate": {"min": 1e-8, "max": 1e-4, "recommended": 1e-6}
  },
  "tips": [
    "REMAX不需要critic model，降低了显存需求",
    "适合资源有限的场景"
  ]
}
